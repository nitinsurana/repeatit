{
  "manifest_version": 2,
  "name": "RepeatIt",
  "description": "A User Action Simulator",
  "version": "1.0.4",
  "permissions": [
    "activeTab",
    "storage",
    "tabs",
    "notifications",
    "http://*/",
    "https://*/"
  ],
  "icons": {
    "16": "img/icon16.png",
    "48": "img/icon48.png",
    "128": "img/icon128.png"
  },
  "browser_action": {
    "default_icon": {
      "19": "img/icon48.png",
      "38": "img/icon48.png"
    }
  },
  "content_security_policy": "script-src 'self' 'unsafe-eval' https://ssl.google-analytics.com; object-src 'self'",
  "web_accessible_resources": [
    "img/icon128.png",
    "inject.js",
    "recipes.json"
  ],
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "js": [
        "dist/contentscript.js"
      ]
    }
  ],
  "background": {
    "scripts": [
      "js/jquery-2.0.3.min.js",
      "js/underscore-min.js",
      "js/backbone-min.js",
      "dist/background.js"
    ]
  },
  "options_page": "options/options.html"
}
